# Port range for SOCKS5 proxies
PORT_RANGE_START=12000
PORT_RANGE_END=13999


# PIA Configuration (OpenVPN credentials required)
PIA_USERNAME=your_username
PIA_PASSWORD=your_password

# Proxy Authentication (optional - if set, all proxies will require authentication)
# Password-only authentication: any username works with this password
PROXY_AUTH_PASSWORD=

# Default region filters (use full names or codes: US, UK, CA, DE, NL, CH)
# Defaults to US if not specified to ensure USA IPs only
DEFAULT_COUNTRY=US
DEFAULT_CITY=

# Health check settings
EXIT_IP_CHECK_URL=https://ifconfig.io
HEALTH_INTERVAL_SEC=300  # 5 minutes to reduce CPU overhead
AUTO_HEAL_ENABLED=true  # Automatically restart unhealthy proxies (default: true)

# Performance optimization settings
LOG_DRIVER=none  # Disable logging to reduce CPU usage

# SOCKS bind address (use 0.0.0.0 for all interfaces, restrict with firewall)
SOCKS_BIND=0.0.0.0

# REST API (optional)
REST_ENABLED=false
REST_PORT=8080

# VPN Container Image
VPN_IMAGE=qmcgaw/gluetun:latest

# Database file
DB_PATH=./data/proxies.json